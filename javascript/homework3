function greatestNegative(arr) {
    var arr=[[2, -9, -3, 0], [1, 2], [-4 , -11, 0]];
    var y=[];
    var positiveArr = [];
var negativeArr = [];
    for (let i = 0; i <arr.length; i++) {
    	 for(let j=0;j<arr[i].length;j++){
    	 	 arr.forEach(function(item) {
                 if (item < 0) {
                     negativeArr.push(item);
                 } else {
                     positiveArr.push(item);
 				 }
                
    	 	})
      } 
     }
    
    console.log(negativeArr);
}
