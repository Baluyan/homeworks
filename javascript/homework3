//1
function fiveStar(n){

var i, j, n;
 var count;

    count = n* 2 - 1;

    for(i=1; i<=count; i++)
    {
        for(j=1; j<=count; j++)
        {
            if(j==i || (j==count - i + 1))
            {
                console.log("*");
            }
            else
            {
                console.log(" ");
            }
        }

        console.log("\n");
    }

    return 0;
}

 //fiveStar(5)
 //2


function foo(arr) {
    var a = [], b = [],c=[], prev;

    arr.sort();
    var len=arr.length;
    for ( var i = 0; i < arr.length; i++ ) {
        if ( arr[i] !== prev ) {
            a.push(arr[i]);
            b.push(1);

        } else {
            b[b.length-1]++;
            for(var j=0;j<b.length;j++){
            	c.push(b[j]/len);
            }
        }
        prev = arr[i];
    }

    return [a, b ,c];
}

 console.log(foo([1, 1, 2, 2, 3]))

//3
function stringOrNumber(arr){  

var strCount=0;
var numCount=0;
for(i=0;i<arr.length;i++){

	if(typeof(arr[i])=="string"){

		strCount++
	}
   
   else if(typeof(arr[i])=="number"){

   		numCount++;

   }

 else{
 	console.log("Please, enter an array of numbers mixed with stirngs")
 }

}
console.log( strCount + " " +"Strings");
console.log(numCount + " " + "Numbers");

}

//stringOrNumber([1,"hi", 2, 3])

//4


function longestWord(string) {
    var str = string.split(" ");
    var longest = 0;
    var word = null;
  for (var i = 0; i <= str.length - 1; i++){
        if (longest < str[i].length) {
            longest = str[i].length;
            word = str[i];
        }
    }
    return word;
}


//console.log(longestWord("â€Which would be worse - to live as a monster, or to die as a good man"))

//5

 function sort(str)
{
    string="";
    ss="";
    namestring=str.split("");

    for(j=0;j<namestring.length;j++) {
        for(i=j;i<namestring.length;i++) {
            if(string.includes(namestring[i]))
                break;
            else
                string+=namestring[i];
         }
         if(ss.length<string.length)
             ss=string;
         string="";
    }
    return ss;
}
console.log(sort("parting your soup is not a miracle,bruce."));

